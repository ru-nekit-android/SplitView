<?xml version="1.0" encoding="utf-8"?>
<s:View 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:flexpad="com.flexpad.*"
	title="Подтверждение">
	
	<s:actionContent>
		<flexpad:BackButtonBlack id="back" label="Назад" width="70"/>
	</s:actionContent>
	
	<s:Group width="25%" horizontalCenter="0" verticalCenter="0">
		<s:Scroller width="100%" height="100%" depth="1">
			<s:Group width="100%" height="100%">
				
				<s:SkinnableContainer width="100%" styleName="parameterContainerStyle">
					<s:layout>
						<s:VerticalLayout 
							gap="2"
							/>
					</s:layout>	
					<s:Form width="100%">
						<s:FormItem label="Код" width="100%">
							<s:TextInput id="confirmationCode" width="100%"/>
						</s:FormItem>
					</s:Form>
					<s:Form width="100%">
						<s:FormItem width="100%">
							<s:Button id="confirmationCall" width="100%" label="Подтвердить" skinClass="com.flexpad.skin.ButtonBlueSkin"/>
						</s:FormItem>
					</s:Form>
				</s:SkinnableContainer>
				
			</s:Group>
		</s:Scroller>
	</s:Group>
	
</s:View>